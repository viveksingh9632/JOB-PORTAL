<%- include('./layout/header') %>

<h2 class="page-title">Add a page</h2>
<a href="/categories" class="btn btn-primary">Back to all categories</a>
<br><br>
<div class="container mt-5">
  <% if (message) { %>
    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <strong><%= message.message %></strong>
    </div>
<% } %>



<form method="post" action="/add_categorie">

  <div class="mb-3">
    <label for="">Category</label>
    <input type="text" class="form-control" name="category" placeholder="category" />
  </div>

  <div class="form-group">
    <label for="">Description</label>
    <textarea name="desc" class="form-control" cols="30" rows="10" placeholder="Description"></textarea>
</div>


  <div class="mb-3">
    <label for="">Status</label>
    <input
      type="status"
      class="form-control"
      name="status"
      placeholder="Status"
    />
  </div>

  <button class="btn btn-primary mt-3">Submit</button>
</form>



<%- include('./layout/footer') %>
